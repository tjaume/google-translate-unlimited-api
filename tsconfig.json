{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "/src",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": false,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2016", "dom"]
    },
    "exclude": ["./dist", "./test"]
}
